<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

      <h1>Edit Team Info</h1>

      <form action="/topics/<%= topic.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Team</label>
          <input value="<%= topic.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
          <small class="text-muted" id="titleHelp">team name and city.</small>
        </div>
        <div class="form-group">
          <label for="description">Current trends and standings</label>
          <textarea rows="4" class="form-control" name="description" placeholder="Enter Description"><%= topic.description %></textarea>
          <small class="text-muted" id="bodyHelp">must be 10 or more characters in length.</small>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
